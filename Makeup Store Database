--display the database ordered by price.
SELECT * FROM makeup_store 
ORDER BY price asc;

--what is the avg price of red colored items?
SELECT AVG(price)
FROM makeup_store
WHERE color='red';

--what are the 5 most expensive items? 
SELECT kind, brand, price
FROM makeup_store
order by kind asc
limit 5;
